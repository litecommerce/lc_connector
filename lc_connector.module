/**
 * Save unencrypted password from user input for further passing it to LiteCommerce
 *  
 * @param array &$form       Form description
 * @param array &$form_state Form state
 *
 * @return void
 * @see    ____func_see____
 * @since  1.0.0
 */
function lc_connector_user_profile_form_submit($form, &$form_state)
{
    if (isset($form_state['input']) && isset($form_state['input']['pass']['pass1'])) {
        LCConnector_Handler::saveVariable('passwd', $form_state['input']['pass']['pass1'], true);
    }
}

